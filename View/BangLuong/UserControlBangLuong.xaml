<UserControl x:Class="WpfApp1.View.BangLuong.UserControlBangLuong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.BangLuong"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        
            <StackPanel Orientation="Horizontal">
                <Grid Width="40"></Grid>
                <Button Content="Bảng Lương" FontSize="20" Background="White" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center"  x:Name="bangluong1" Click="bangluong1_Click"></Button>
                <Grid Width="50"></Grid>
                <Button Content="Thay Đổi Bảng Lương" FontSize="20" Background="White" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="change" Click="change_Click"></Button>
                <Grid Width="50"></Grid>
                <Button Content="Bảng Tính Lương" FontSize="20" Background="White" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="bangtinh" Click="bangtinh_Click"></Button>

            </StackPanel>

        </Grid>
</UserControl>
