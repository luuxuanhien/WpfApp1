<UserControl x:Class="WpfApp1.View.ChamCong.UserControlChamCong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.ChamCong"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Orientation="Horizontal">
            <Grid Width="40"></Grid>
            <Button Content="Bảng Công" FontSize="20" Background="White" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center"  x:Name="bangcong" Click="bangcong_Click"></Button>
            <Grid Width="50"></Grid>
            <Button Content="Bảng Công Thử Việc" FontSize="20" Background="White" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="bangcongthuviec" Click="bangcongthuviec_Click"></Button>
            <Grid Width="50"></Grid>
            <Button Content="Khen Thưởng/Kỷ Luật" FontSize="20" Background="White" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="khenthuong" Click="khenthuong_Click"></Button>
            
        </StackPanel>
            
    </Grid>
</UserControl>
