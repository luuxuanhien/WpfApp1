<Window x:Class="WpfApp1.View.NhanVien.FormThemNhanVienThuViec"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View.NhanVien"
        mc:Ignorable="d"
        Title="FormThemNhanVienThuViec" Height="450" Width="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <TextBlock Text="Thêm Nhân Viên Thử Việc" Style="{DynamicResource textblock}"></TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Mã Nhân Viên  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding MaNVTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Họ Tên  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding HoTenTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="giới tính  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding SexTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="CCCD  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding CCCDTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Vị Trí Thử Việc  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding VTTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Học Vấn  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding HocVanTV}"></TextBox>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Ngày Bắt Đầu  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <DatePicker Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" SelectedDate="{Binding NgayBatDauTV}"></DatePicker>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Ngày Kết Thúc  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <DatePicker Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" SelectedDate="{Binding NgayKetThucTV}"></DatePicker>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Trường Đại Học  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding TruongDaiHocTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Số Điện Thoại  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding SDTTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Email  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding EmailTV}"></TextBox>
                </Grid>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="Ghi Chú  " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></Label>
                    <TextBox Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="0 0 0 1" Text="{Binding NoteTV}"></TextBox>
                </Grid>
            </Grid>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" Margin="130 0 0 0">
            <Button Grid.Row="2" Style="{DynamicResource button}" Content="Thêm" Height="35" Command="{Binding ThemNVTV}"></Button>
            <Grid Width="50"></Grid>
            <Button Grid.Row="2" Style="{DynamicResource button}" Content="Hủy" Height="35" Command="{Binding CloseFormBH}"></Button>

        </StackPanel>
        
    </Grid>
</Window>
